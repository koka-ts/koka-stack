{
    "name": "koka",
    "version": "1.0.9",
    "description": "Lightweight 3kB Effect-TS alternative library based on Algebraic Effects",
    "keywords": [],
    "repository": "github:koka-ts/koka",
    "bugs": "https://github.com/koka-ts/koka/issues",
    "author": "https://github.com/koka-ts",
    "type": "module",
    "main": "cjs/koka.js",
    "types": "cjs/koka.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./esm/koka.d.ts",
                "default": "./esm/koka.js"
            },
            "require": {
                "types": "./cjs/koka.d.ts",
                "default": "./cjs/koka.js"
            }
        },
        "./err": {
            "import": {
                "types": "./esm/err.d.ts",
                "default": "./esm/err.js"
            },
            "require": {
                "types": "./cjs/err.d.ts",
                "default": "./cjs/err.js"
            }
        },
        "./ctx": {
            "import": {
                "types": "./esm/ctx.d.ts",
                "default": "./esm/ctx.js"
            },
            "require": {
                "types": "./cjs/ctx.d.ts",
                "default": "./cjs/ctx.js"
            }
        },
        "./opt": {
            "import": {
                "types": "./esm/opt.d.ts",
                "default": "./esm/opt.js"
            },
            "require": {
                "types": "./cjs/opt.d.ts",
                "default": "./cjs/opt.js"
            }
        },
        "./async": {
            "import": {
                "types": "./esm/async.d.ts",
                "default": "./esm/async.js"
            },
            "require": {
                "types": "./cjs/async.d.ts",
                "default": "./cjs/async.js"
            }
        },
        "./result": {
            "import": {
                "types": "./esm/result.d.ts",
                "default": "./esm/result.js"
            },
            "require": {
                "types": "./cjs/result.d.ts",
                "default": "./cjs/result.js"
            }
        },
        "./msg": {
            "import": {
                "types": "./esm/msg.d.ts",
                "default": "./esm/msg.js"
            },
            "require": {
                "types": "./cjs/msg.d.ts",
                "default": "./cjs/msg.js"
            }
        },
        "./task": {
            "import": {
                "types": "./esm/task.d.ts",
                "default": "./esm/task.js"
            },
            "require": {
                "types": "./cjs/task.d.ts",
                "default": "./cjs/task.js"
            }
        },
        "./gen": {
            "import": {
                "types": "./esm/gen.d.ts",
                "default": "./esm/gen.js"
            },
            "require": {
                "types": "./cjs/gen.d.ts",
                "default": "./cjs/gen.js"
            }
        },
        "./esm": {
            "types": "./esm/koka.d.ts",
            "default": "./esm/koka.js"
        },
        "./cjs": {
            "types": "./cjs/koka.d.ts",
            "default": "./cjs/koka.js"
        },
        "./esm/*": {
            "types": "./esm/*.d.ts",
            "default": "./esm/*.js"
        },
        "./cjs/*": {
            "types": "./cjs/*.d.ts",
            "default": "./cjs/*.js"
        }
    },
    "files": [
        "cjs",
        "esm",
        "src",
        "modules"
    ],
    "engines": {
        "node": ">=14.x"
    },
    "scripts": {
        "build": "run-s clean build:cjs build:esm",
        "build:cjs": "tsc -p tsconfig.cjs.json --composite false",
        "build:esm": "tsc -p tsconfig.esm.json --composite false",
        "clean": "shx rm -rf ./cjs ./esm",
        "test": "jest",
        "test:coverage": "jest --collectCoverage --coverage"
    },
    "dependencies": {
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@types/jest": "^27.5.0",
        "jest": "^27.5.1",
        "ts-jest": "^27.1.4",
        "rimraf": "^3.0.2",
        "shx": "^0.3.4",
        "tsx": "^4.7.0",
        "typescript": "^5.8.0",
        "npm-run-all": "^4.1.5"
    },
    "publishConfig": {
        "access": "public"
    }
}
